#!/bin/bash

####################################################################################################

LOCAL_NET="192.168.55.124"
REMOTE="192.168.55.1"
INTERFACE="ens33"
USER="jody"

####################################################################################################

[[ $1 ]] || { echo "Usage: $0 remote_file"; exit 2; }

ifconfig $INTERFACE $LOCAL_NET up 

scp ${USER}@${REMOTE}:$1 .

####################################################################################################
